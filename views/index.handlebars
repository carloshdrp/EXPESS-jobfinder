<main id="principal">
  <section class="flex items-center justify-center">
    <img
      src="/resources/illustration.svg"
      alt="Ilustração de pessoa buscando emprego"
      class="max-w[620px] max-h-[462px]"
    />
  </section>

  <section class="flex items-center justify-center flex-wrap">
    <header>
      <h1 class="text-2xl text-center">
        Encontre o emprego dos seus sonhos
      </h1>
      <h2 class="text-lg text-center">
        Encontre vagas que combinem com suas habilidades, competências e
        objetivos profissionais
      </h2>
    </header>
    <form action="/" method="get" id="search-form" class="w-full">
      <label for="jobSearch"><input
          type="text"
          name="jobSearch"
          id="jobSearch"
          placeholder="Digite a vaga que está procurando"
          class="w-[75%] h-[50px] bg-gray-light indent-[10px]"
        /></label>
      <button type="submit" class="w-[20%] h-[50px] bg-red text-white">
        Buscar
      </button>
    </form>
  </section>
</main>
<main id="jobs-list" class="min-h-screen relative mx-tema">
  <header>
      {{#if search}}
          <h2 class="text-2xl my-[30px]">Buscando vagas que contenham: {{search}}</h2>
      {{else}}
          <h2 class="text-2xl my-[30px]">Veja as vagas já cadastradas</h2>
      {{/if}}
  </header>

  {{#jobs}}
    <article {{#if new_job}}class="new-job"{{/if}}>
      <section class="ml-[25px] flex items-center">
        <div>

          <p class="text-base">{{company}}</p>
          <h2 class="text-xl">{{title}}</h2>
          <p class="text-base">R$ {{salary}}</p>
        </div>
      </section>
        {{#if new_job}}
            <p class="new-badge">Nova</p>
        {{/if}}
      <a
        href="/jobs/job/{{id}}"
        class="px-[38px] py-[17px] text-white bg-red mr-[40px]"
      >Conferir
      </a>
    </article>
  {{/jobs}}
</main>